table(class="table table-striped table-condensed table-hover")
    thead
        th Title
        th Type
        th Description
        th Status
        th Create Date
        th Operation
    tbody
        tr(ng-repeat='goal in goals' id='item_{{goal._id}}')
            td {{goal.title}}
            td {{goal.type}}
            td {{goal.description}}
            td {{goal.status}}
            td {{goal.createDate | date:'MM/dd/yyyy @ h:mma'}}
            td
                a(href='/#/edit/{{goal._id}}')
                    i(class='glyphicon glyphicon-edit')
                span(style='padding-right:10px')
                a(href='#' ng-click='deleteGoal()')
                    i(class='glyphicon glyphicon-remove')
                span(style='padding-right:10px')
                a(href='#' ng-click='finishGoal()')
                    i(class='glyphicon glyphicon-ok')

